{
  "compilerOptions": {
    "target": "ES2021", //versión de ECMAScript
    "outDir": "./dist", //carpeta de salida
    "rootDir": "./src", //carpeta de origen
    "strict": true, //modo estricto
    "esModuleInterop": true, //compatibilidad con módulos ES
    "moduleResolution": "node", //resolución de módulos
    "module": "commonjs", //tipo de módulo
    "baseUrl": "./src", //base URL para las rutas

    "paths": { "@*": ["*"] },
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}